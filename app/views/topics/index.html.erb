<h1>Listing topics</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @topics.each do |topic| %>
    <tr>
      <td><%= link_to topic.title, topic, :class => "link" %></td>
      <td><%= topic.description %></td>
      <td><%= pluralize(topic.votes.length, "vote") %></td>
      <td><%= button_to '+1', votes_path(topic_id: topic.id), method: :post %></td>
      <td><%= link_to 'Obliterate!', topic, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>

<br />

